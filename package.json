{
  "name": "lunar-calendar",
  "version": "1.0.0",
  "private": true,
  "description": "Vietnamese Lunar Calendar - Cross-platform app with offline support",
  "author": "DenDa Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@lunar-calendar/mobile -- --web",
    "dev:android": "turbo dev --filter=@lunar-calendar/mobile -- --android",
    "dev:ios": "turbo dev --filter=@lunar-calendar/mobile -- --ios",
    "build": "turbo build",
    "build:core": "turbo build --filter=@lunar-calendar/core",
    "build:web": "turbo build:web --filter=@lunar-calendar/mobile",
    "build:android": "turbo build:android --filter=@lunar-calendar/mobile",
    "build:android:release": "turbo build:android:release --filter=@lunar-calendar/mobile",
    "test": "turbo test",
    "test:core": "turbo test --filter=@lunar-calendar/core",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky install",
    "version:patch": "pnpm version patch --no-git-tag-version",
    "version:minor": "pnpm version minor --no-git-tag-version",
    "version:major": "pnpm version major --no-git-tag-version"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
