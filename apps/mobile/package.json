{
  "name": "@lunar-calendar/mobile",
  "version": "1.0.0",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "dev:web": "expo start --web",
    "dev:android": "expo start --android",
    "dev:ios": "expo start --ios",
    "build:web": "expo export --platform web",
    "build:android": "eas build --platform android --profile preview",
    "build:android:release": "eas build --platform android --profile production",
    "build:ios": "eas build --platform ios --profile preview",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .expo dist android/app/build ios/build"
  },
  "dependencies": {
    "@lunar-calendar/core": "workspace:*",
    "@lunar-calendar/ui": "workspace:*",
    "expo": "~51.0.0",
    "expo-router": "~3.5.0",
    "expo-status-bar": "~1.12.0",
    "expo-linking": "~6.3.0",
    "expo-constants": "~16.0.0",
    "expo-location": "~17.0.0",
    "react": "18.2.0",
    "react-native": "0.74.0",
    "react-native-web": "~0.19.10",
    "react-native-safe-area-context": "4.10.0",
    "react-native-screens": "3.31.0",
    "react-native-gesture-handler": "~2.16.0",
    "react-native-reanimated": "~3.10.0",
    "@react-native-async-storage/async-storage": "1.23.0",
    "date-fns": "^3.0.0",
    "zustand": "^4.5.0",
    "nativewind": "^4.0.1",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@types/react": "~18.2.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.3"
  }
}
